{% extends "base.html.twig" %}
{% block content %}
   
	{% autoescape false %}
		<p>
			{{ post.title }}
		</p>
		<span>
			Post√© le
			{{ post.day|date("d/m/Y") }}
		</span>
		<p>
			{{ post.content }}
		</p>
	{% endautoescape %}
	<a href=" {{ path('billets') }} ">
		Retour
	</a>
	{% if loged == true %}
		<form action=" {{ path('post_comment', {'id': post.id }) }} " method='POST'>
			<input type="text" value="Votre commentaire" name='content'>
			<input type="submit" value="Envoyer">
		</form>
	{% endif %}
	<h2>
		Commentaires:
	</h2>
	<p class="confirmReport">
		{{message}}
	</p>
	{% for comment in comments %}
		<p>
			le
			{{  comment.day|date("d/m/Y") }}
			par
			{{comment.user_Name}}
			:
			{{ comment.content }}
			<span>
				{% if user_name == comment.user_Name  %}
					<a href=" {{ path('deleteComment', { 'id' : comment.id, 'id_post': post.id}) }} ">
						<i class="fas fa-times-circle"></i>
					</a>

				{% endif %}
				<a href=" {{ path('reportComment', { 'idPost': post.id, 'id' : comment.id }) }} ">Signalez</a>
					
				


			</span>
		</p>

	{% endfor %}

	{% block js %}

	{% endblock %}
{% endblock %}
