<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
			<link rel="stylesheet" href=" {{ asset('style.css') }} "/>
			<script src="https://kit.fontawesome.com/62d6a78e4f.js" crossorigin="anonymous"></script>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			Document
		</title>
	</head>
	<body>

			<h1>Commentaires signalez :</h1>
		<table class="table table-dark">
			<thead>
				<tr>
					<th scope="col">nombre de signalement unique</th>
					<th scope="col">id du post ou le commentaires est signalez</th>
					<th scope="col">Nom d'utilsateur de l'auteur du commentaire</th>
					<th scope="col">Contenu du commentaire</th>
				</tr>
			</thead>
			<tbody>
		{% for comment in comments %}
				<tr>
					<th scope="row">{{ comment.nbOfReport }}</td>
					<td>{{ comment.id_Post }}</td>
					<td>{{ comment.user_Name }}</td>
					<td>{{ comment.content }}</td>
					<td><a href=" {{ path('deleteComment', { 'id' : comment.id, 'id_post': comment.id_Post}) }} ">
					Supprimer le commentaire
					<i class="fas fa-times-circle"></i>
				</a></td>
								</tr>

		{% endfor %}
			</tbody>
		</table>
		{% block name %}
			<h2><a href=" {{path('admin/add')}} ">
				Ajoutez un nouveau billet
			</a></h2>
		{% endblock %}

		{% block posts %}
			<table class="table table-striped">
				<thead>
					<th scope="col">
						ID du post
					</th>
					<th scope="col">
						titre du post
					</th>
				</thead>
				<tbody>
					{% autoescape false %}
						{% for post in posts %}
							<tr>
								<th scope="row">
									{{ post.id }}
								</td>
								<td>
									<a href=" {{ path('admin/update', {'id': post.id}) }} ">
										{{ post.title|striptags }}
									</a>
								</td>
							</tr>
						{% endfor %}
					{% endautoescape %}
				</tbody>
			</table>


		{% endblock %}

	</body>
</html>
