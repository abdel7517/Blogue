{% extends "base.html.twig" %}

{% block content %}


	{% for post in posts %}
		<div class="item mb-5">

			<div class="media">
				<img class="mr-3 img-fluid post-thumb d-none d-md-flex" src="assets/images/blog/blog-post-thumb-1.jpg" alt="image">
				<div class="media-body">
					<h3 class="title mb-1">
						<a href=" {{ path('billet', {'id': post.id}) }} ">
							{{ post.title|striptags|raw }}
						</a>
					</h3>
					<div class="meta mb-1">
						<span class="date">
							Publi√© le
							{{ post.day|date("d/m/Y") }}
						</span>
						<span class="time">
							{{ post.timeToRead }} min. de lecture
						</span>
					</div>
					<div class="intro">
						{{ post.intro|striptags|raw  }}
					</div>
					<a class="more-link" href=" {{ path('billet', {'id': post.id}) }} ">
						Lire la suite &rarr;
					</a>
				</div>
				<!--//media-body-->
			</div>
			<!--//media-->
		</div>
		<!--//item-->

	{% endfor %}
{% endblock %}
